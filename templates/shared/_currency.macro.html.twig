{% macro amount(amount, color = 'true', disable = 'false', forceSign = false) %}
    {% set class = (amount >= 0 )
        ? 'text-success'
        : 'text-secondary' %}
    {% set class = (disable == 'true')
        ? 'text-muted'
        : class
    %}

    <span class="{{ color == 'true' ? class : '' }}">{{ amount | currency(forceSign) }}</span>
{% endmacro %}

{% macro progress(amount, status, color = 'true') %}
    <span class="progress-status {{ color == 'true' ? status : '' }}">{{ amount | currency }}</span>
{% endmacro %}