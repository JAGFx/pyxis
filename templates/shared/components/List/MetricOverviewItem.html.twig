{% set title = title | default('') %}
{% set icon = icon | default('') %}
{% set value = value | default('') %}
{% set color = color | default('default') %}

{% set metricOverviewItemCva = cva({
    'base': '',
    'variants': {
        'color': {
            'primary': 'text-primary',
            'secondary': 'text-secondary',
            'success': 'text-success',
            'default': 'text-white',
        },
    },
    'defaultVariants': {
        'color': 'default',
    },
}) %}

<div class="{{ ('flex flex-col flex-auto w-full' ~ ' ' ~ attributes.render('class')) | tailwind_merge }}" {{ attributes.without('class') }}>
    <small class="text-muted">{{ title }}</small>
    <span class="{{ metricOverviewItemCva.apply({color}) }}">
        <i class="{{ icon }} text-sm"></i>
        <small>{{ value }}</small>
    </span>
</div>
