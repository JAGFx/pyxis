{# templates/forms/tailwind_theme.html.twig #}

{# Form widget base #}
{% block form_widget_simple -%}
    {%- set type = type|default('text') -%}
    {%- set attr = attr|merge({
        'class': (attr.class|default('') ~ ' w-full px-4 py-2 bg-white/10 border rounded-3xl placeholder:text-white/30 text-white text-sm focus:outline-none focus:ring-0 transition-colors duration-200 ' ~
        (errors|length > 0 ? 'border-secondary' : (form.vars.required and form.vars.data is empty ? 'border-white/30' : 'border-white/30')) ~
        ' focus:border-primary hover:border-primary/50')|trim
    }) -%}
    <input type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
{%- endblock form_widget_simple %}

{# Label styling #}
{% block form_label -%}
    {% if label is not same as(false) -%}
        {% if not compound -%}
            {% set label_attr = label_attr|merge({'for': id}) %}
        {%- endif -%}
        {% if required -%}
            {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
        {%- endif -%}
        {% if label is empty -%}
            {%- if label_format is not empty -%}
                {% set label = label_format|replace({
                    '%name%': name,
                    '%id%': id,
                }) %}
            {%- else -%}
                {% set label = name|humanize %}
            {%- endif -%}
        {%- endif -%}
        {%- set label_attr = label_attr|merge({
            'class': (label_attr.class|default('') ~ ' ms-4 flex justify-start items-center space-x-2 text-sm font-medium text-primary mb-1')|trim
        }) -%}
        <label{% with { attr: label_attr } %}{{ block('attributes') }}{% endwith %}>
            <span>{{- label|trans({}, translation_domain) -}}</span>
            {%- if required -%}
                <div class="flex h-1.5 w-1.5 relative items-center">
                    <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75"></span>
                    <span class="relative inline-flex rounded-full h-1.5 w-1.5 bg-red-500"></span>
                </div>
            {%- endif -%}
        </label>
    {%- endif -%}
{%- endblock form_label %}

{# Money label #}
{% block money_label -%}
    {{- block('form_label') -}}
{%- endblock money_label %}

{# Textarea #}
{% block textarea_widget -%}
    {%- set attr = attr|merge({
        'class': (attr.class|default('') ~ ' w-full px-4 py-2 bg-white/10 border rounded-2xl placeholder:text-white/30 text-white text-sm focus:outline-none focus:ring-0 transition-colors duration-200 resize-vertical min-h-[100px] ' ~
        (errors|length > 0 ? 'border-secondary' : 'border-white/30') ~
        ' focus:border-primary hover:border-primary/50')|trim
    }) -%}
    <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
{%- endblock textarea_widget %}

{# Select field #}
{% block choice_widget_collapsed -%}
    {%- set attr = attr|merge({
        'class': (attr.class|default('') ~ ' w-full px-4 py-2 bg-white/10 border rounded-3xl text-white text-sm focus:outline-none focus:ring-0 transition-colors duration-200 appearance-none bg-no-repeat bg-right pr-10 ' ~
        (errors|length > 0 ? 'border-secondary' : 'border-white/30') ~
        ' focus:border-primary hover:border-primary/50')|trim,
        'style': (attr.style|default('') ~ 'background-image: url("data:image/svg+xml,%3csvg xmlns=\'http://www.w3.org/2000/svg\' fill=\'none\' viewBox=\'0 0 20 20\'%3e%3cpath stroke=\'%23ffffff\' stroke-linecap=\'round\' stroke-linejoin=\'round\' stroke-width=\'1.5\' d=\'M6 8l4 4 4-4\'/%3e%3c/svg%3e"); background-position: right 0.75rem center; background-size: 1.5em 1.5em;')|trim
    }) -%}
    <select {{ block('widget_attributes') }}{% if multiple %} multiple="multiple"{% endif %}>
        {%- if placeholder is not empty -%}
            <option value="" class="text-white/30">{{ placeholder != '' ? (translation_domain is same as(false) ? placeholder : placeholder|trans({}, translation_domain)) }}</option>
        {%- endif -%}
        {%- if preferred_choices|length > 0 -%}
            {% set options = preferred_choices %}
            {{- block('choice_widget_options') -}}
            {%- if choices|length > 0 and separator is not none -%}
                <option disabled="disabled">{{ separator }}</option>
            {%- endif -%}
        {%- endif -%}
        {%- set options = choices -%}
        {{- block('choice_widget_options') -}}
    </select>
{%- endblock choice_widget_collapsed %}

{# Select options #}
{% block choice_widget_options -%}
    {%- for group_label, choice in options -%}
        {%- if choice is iterable -%}
            <optgroup label="{{ choice_translation_domain is same as(false) ? group_label : group_label|trans({}, choice_translation_domain) }}" class="text-gray-900">
                {%- set options = choice -%}
                {{- block('choice_widget_options') -}}
            </optgroup>
        {%- else -%}
            <option value="{{ choice.value }}" class="text-gray-900 bg-white"{% if choice.attr %} {% set attr = choice.attr %}{{ block('attributes') }}{% endif %}{% if choice is selectedchoice(value) %} selected="selected"{% endif %}>{{ choice_translation_domain is same as(false) ? choice.label : choice.label|trans({}, choice_translation_domain) }}</option>
        {%- endif -%}
    {%- endfor -%}
{%- endblock choice_widget_options %}

{# Checkboxes and Radios (expanded = true) - Segmented style #}
{% block choice_widget_expanded -%}
    <div {{ block('widget_container_attributes') }} class="flex bg-white/10 border border-white/30 rounded-3xl p-1 gap-1">
        {%- for child in form -%}
            {%- set input_type = multiple ? 'checkbox' : 'radio' -%}
            <div class="flex-1 relative">
                <input type="{{ input_type }}"
                       id="{{ child.vars.id }}"
                       name="{{ child.vars.full_name }}"
                       value="{{ child.vars.value }}"
                       {% if child.vars.checked %}checked="checked"{% endif %}
                       class="absolute inset-0 opacity-0 cursor-pointer peer" />
                <label for="{{ child.vars.id }}"
                       class="flex items-center justify-center px-2 py-1 text-sm font-medium cursor-pointer rounded-2xl transition-all duration-200 w-full
                              text-white/70 hover:text-white
                              peer-checked:bg-gradient-primary peer-checked:text-white peer-checked:shadow-sm
                              peer-focus-visible:outline peer-focus-visible:outline-primary/50">
                    {{- child.vars.label|trans({}, translation_domain) -}}
                </label>
            </div>
        {%- endfor -%}
    </div>
{%- endblock choice_widget_expanded %}


{# Checkbox widget #}
{% block checkbox_widget -%}
    {%- set attr = attr|merge({
        'class': (attr.class|default('') ~ ' w-4 h-4 rounded border-2 bg-white/10 border-white/30 text-primary focus:ring-primary focus:ring-2 focus:ring-offset-0 focus:border-primary checked:border-primary transition-colors duration-200')|trim
    }) -%}
    <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
{%- endblock checkbox_widget %}

{# Radio widget #}
{% block radio_widget -%}
    {%- set attr = attr|merge({
        'class': (attr.class|default('') ~ ' w-4 h-4 border-2 bg-white/10 border-white/30 text-primary focus:ring-primary focus:ring-2 focus:ring-offset-0 focus:border-primary checked:border-primary transition-colors duration-200')|trim
    }) -%}
    <input type="radio" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
{%- endblock radio_widget %}

{# File widget #}
{% block file_widget -%}
    {%- set attr = attr|merge({
        'class': (attr.class|default('') ~ ' w-full px-4 py-2 bg-white/10 border border-white/30 rounded-3xl text-white text-sm focus:outline-none focus:ring-0 focus:border-primary hover:border-primary/50 transition-colors duration-200 file:mr-4 file:py-2 file:px-4 file:rounded-3xl file:border-0 file:text-sm file:font-semibold file:bg-primary file:text-white hover:file:bg-primary/90')|trim
    }) -%}
    <input type="file" {{ block('widget_attributes') }} />
{%- endblock file_widget %}

{# Password widget #}
{% block password_widget -%}
    {%- set type = 'password' -%}
    {{- block('form_widget_simple') -}}
{%- endblock password_widget %}

{# Email widget #}
{% block email_widget -%}
    {%- set type = 'email' -%}
    {{- block('form_widget_simple') -}}
{%- endblock email_widget %}

{# URL widget #}
{% block url_widget -%}
    {%- set type = 'url' -%}
    {{- block('form_widget_simple') -}}
{%- endblock url_widget %}

{# Number widget #}
{% block number_widget -%}
    {%- set type = 'number' -%}
    {{- block('form_widget_simple') -}}
{%- endblock number_widget %}

{# Integer widget #}
{% block integer_widget -%}
    {%- set type = 'number' -%}
    {{- block('form_widget_simple') -}}
{%- endblock integer_widget %}

{# Money widget #}
{% block money_widget -%}
    {%- set prepend = money_pattern starts with '{{' -%}
    {%- set append = money_pattern ends with '}}' -%}
    {%- if not (prepend or append) -%}
        {{- block('form_widget_simple') -}}
    {%- else -%}
        <div class="relative">
            {%- if prepend -%}
                <div class="absolute left-4 top-1/2 transform -translate-y-1/2 text-white/70 text-sm pointer-events-none">
                    {{- money_pattern|replace({'{{ widget }}': ''})|trim -}}
                </div>
                {%- set attr = attr|merge({
                    'class': (attr.class|default('') ~ ' pl-8')|trim
                }) -%}
            {%- endif -%}
            {%- if append -%}
                <div class="absolute right-4 top-1/2 transform -translate-y-1/2 text-white/70 text-sm pointer-events-none">
                    {{- money_pattern|replace({'{{ widget }}': ''})|trim -}}
                </div>
                {%- set attr = attr|merge({
                    'class': (attr.class|default('') ~ ' pr-8')|trim
                }) -%}
            {%- endif -%}
            {%- set type = type|default('text') -%}
            {%- set attr = attr|merge({
                'class': (attr.class|default('') ~ ' w-full px-4 py-2 bg-white/10 border rounded-3xl placeholder:text-white/30 text-white text-sm focus:outline-none focus:ring-0 transition-colors duration-200 ' ~
                (errors|length > 0 ? 'border-secondary' : 'border-white/30') ~
                ' focus:border-primary hover:border-primary/50')|trim
            }) -%}
            <input type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
        </div>
    {%- endif -%}
{%- endblock money_widget %}

{# Percent widget #}
{% block percent_widget -%}
    <div class="relative">
        {%- set type = type|default('text') -%}
        {%- set attr = attr|merge({
            'class': (attr.class|default('') ~ ' w-full px-4 py-2 pr-8 bg-white/10 border rounded-3xl placeholder:text-white/30 text-white text-sm focus:outline-none focus:ring-0 transition-colors duration-200 ' ~
            (errors|length > 0 ? 'border-secondary' : 'border-white/30') ~
            ' focus:border-primary hover:border-primary/50')|trim
        }) -%}
        <input type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
        <div class="absolute right-4 top-1/2 transform -translate-y-1/2 text-white/70 text-sm pointer-events-none">%</div>
    </div>
{%- endblock percent_widget %}

{# Date widget #}
{% block date_widget -%}
    {%- if widget == 'single_text' -%}
        {%- set type = 'date' -%}
        {{- block('form_widget_simple') -}}
    {%- else -%}
        <div {{ block('widget_container_attributes') }} class="flex space-x-2">
            {{- date_pattern|replace({
                '{{ year }}':  form_widget(form.year, {attr: {class: 'flex-1'}}),
                '{{ month }}': form_widget(form.month, {attr: {class: 'flex-1'}}),
                '{{ day }}':   form_widget(form.day, {attr: {class: 'flex-1'}}),
            })|raw -}}
        </div>
    {%- endif -%}
{%- endblock date_widget %}

{# Time widget #}
{% block time_widget -%}
    {%- if widget == 'single_text' -%}
        {%- set type = 'time' -%}
        {{- block('form_widget_simple') -}}
    {%- else -%}
        <div {{ block('widget_container_attributes') }} class="flex space-x-2">
            {{ form_widget(form.hour, {attr: {class: 'flex-1'}}) }}
            {%- if with_minutes -%}:{{ form_widget(form.minute, {attr: {class: 'flex-1'}}) }}{%- endif -%}
            {%- if with_seconds -%}:{{ form_widget(form.second, {attr: {class: 'flex-1'}}) }}{%- endif -%}
        </div>
    {%- endif -%}
{%- endblock time_widget %}

{# DateTime widget #}
{% block datetime_widget -%}
    {%- if widget == 'single_text' -%}
        {%- set type = 'datetime-local' -%}
        {{- block('form_widget_simple') -}}
    {%- else -%}
        <div {{ block('widget_container_attributes') }} class="space-y-2">
            {{ form_widget(form.date) }}
            {{ form_widget(form.time) }}
        </div>
    {%- endif -%}
{%- endblock datetime_widget %}

{# Form row - remove wrapper for form elements #}
{% block form_row -%}
    {{- form_label(form) -}}
    {{- form_widget(form) -}}
    {{- form_errors(form) -}}
    {%- if help is not empty -%}
        <div class="mt-1 mb-4 text-sm text-white/70">
            {{- help|trans({}, translation_domain) -}}
        </div>
    {%- else -%}
        <div class="mb-4"></div>
    {%- endif -%}
{%- endblock form_row %}

{# Form errors #}
{% block form_errors -%}
    {%- if errors|length > 0 -%}
        <div class="mt-1 ms-4">
            {%- for error in errors -%}
                <div class="text-sm text-secondary">
                    {{ error.message }}
                </div>
            {%- endfor -%}
        </div>
    {%- endif -%}
{%- endblock form_errors %}

{# Button widget #}
{% block button_widget -%}
    {%- if label is empty -%}
        {%- if label_format is not empty -%}
            {% set label = label_format|replace({
                '%name%': name,
                '%id%': id,
            }) %}
        {%- elseif label is same as(false) -%}
            {% set translation_domain = false %}
        {%- else -%}
            {% set label = name|humanize %}
        {%- endif -%}
    {%- endif -%}
    {%- set attr = attr|merge({
        'class': (attr.class|default('') ~ ' inline-flex items-center justify-center px-6 py-2 bg-primary text-white font-medium text-sm rounded-3xl hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 transition-colors duration-200 disabled:opacity-50 disabled:cursor-not-allowed')|trim
    }) -%}
    <button type="{{ type|default('button') }}" {{ block('button_attributes') }}>
        {{ label|trans({}, translation_domain) }}
    </button>
{%- endblock button_widget %}

{# Submit button #}
{% block submit_widget -%}
    {%- set type = 'submit' -%}
    {{- block('button_widget') -}}
{%- endblock submit_widget %}

{# Reset button #}
{% block reset_widget -%}
    {%- set type = 'reset' -%}
    {%- set attr = attr|merge({
        'class': (attr.class|default('') ~ ' inline-flex items-center justify-center px-6 py-2 bg-white/10 text-white font-medium text-sm rounded-3xl border border-white/30 hover:bg-white/20 focus:outline-none focus:ring-2 focus:ring-white/50 focus:ring-offset-2 transition-colors duration-200')|trim
    }) -%}
    {{- block('button_widget') -}}
{%- endblock reset_widget %}

{# Hidden widget #}
{% block hidden_widget -%}
    {%- set type = 'hidden' -%}
    <input type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
{%- endblock hidden_widget %}

{# Search widget #}
{% block search_widget -%}
    {%- set type = 'search' -%}
    {{- block('form_widget_simple') -}}
{%- endblock search_widget %}

{# Tel widget #}
{% block tel_widget -%}
    {%- set type = 'tel' -%}
    {{- block('form_widget_simple') -}}
{%- endblock tel_widget %}

{# Color widget #}
{% block color_widget -%}
    {%- set type = 'color' -%}
    {%- set attr = attr|merge({
        'class': (attr.class|default('') ~ ' w-full h-12 bg-white/10 border border-white/30 rounded-3xl focus:outline-none focus:ring-0 focus:border-primary hover:border-primary/50 transition-colors duration-200 cursor-pointer')|trim
    }) -%}
    <input type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
{%- endblock color_widget %}

{# Range widget #}
{% block range_widget -%}
    {%- set type = 'range' -%}
    {%- set attr = attr|merge({
        'class': (attr.class|default('') ~ ' w-full h-2 bg-white/10 rounded-3xl appearance-none cursor-pointer slider-thumb:appearance-none slider-thumb:w-4 slider-thumb:h-4 slider-thumb:bg-primary slider-thumb:rounded-3xl slider-thumb:cursor-pointer')|trim
    }) -%}
    <input type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
{%- endblock range_widget %}
