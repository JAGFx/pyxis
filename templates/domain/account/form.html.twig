{% extends 'base.html.twig' %}

{% block body %}
    <twig:PageTitle :icon="icons.account" label="{{ 'account.title' | trans }}" :detail="account.name"
        >
        <twig:block name="beforeActions">
            <twig:Button node="a" icon="fa-solid fa-arrow-left-long" color="acrylic" href="{{ path('back_account_account_list') }}"/>
        </twig:block>
    </twig:PageTitle>

    <div class="bg-acrylic px-4 py-3 rounded-lg shadow-lg">
        {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_row(form.name) }}

        <twig:Button type="submit" :icon="icons.save" label="{{ 'actions.save' | trans(domain: 'interface') }}" dir="right"/>

        {{ form_end(form) }}
    </div>
{% endblock %}