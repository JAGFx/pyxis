{% extends 'base.html.twig' %}

{% block body %}
    <twig:PageTitle :icon="icons.account" label="{{ 'account.title' | trans }}" detail="{{ account.name | default('actions.create' | trans(domain: 'interface')) }}"
        >
        <twig:block name="beforeActions">
            <twig:Button node="a" :icon="icons.back" color="acrylic" href="{{ path('back_account_account_list') }}"/>
        </twig:block>
    </twig:PageTitle>

    {{ form_start(form, {attr: { class: 'bg-acrylic shadow-lg' }}) }}
    {{ form_errors(form) }}

    {{ form_row(form.name) }}

    <div class="pt-4 pb-1">
        <twig:Button type="submit" :icon="icons.save" label="{{ 'actions.save' | trans(domain: 'interface') }}" dir="right" size="lg"/>
    </div>

    {{ form_end(form) }}
{% endblock %}