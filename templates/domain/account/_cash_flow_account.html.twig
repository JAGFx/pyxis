{% import 'shared/_currency.macro.html.twig' as currency %}

<span class="me-2" data-bs-toggle="tooltip" data-bs-title="Balance" data-bs-placement="bottom">
    {{ currency.amount(amountBalance.total, true) }}
</span>

<div class="d-flex justify-content-between align-items-center w-100">
    <div class="d-flex flex-column w-100">
        <small class="text-muted">Dépense</small>
        <span class="text-primary" data-bs-toggle="tooltip" data-bs-title="Dépense" data-bs-placement="bottom">
            <i class="fa-solid fa-leaf text-primary"></i>
            <small>{{ currency.amount(amountBalance.totalSpent, false) }}</small>
        </span>
    </div>

    <div class="d-flex flex-column w-100">
        <small class="text-muted">Provision</small>
        <span class="text-warning" data-bs-toggle="tooltip" data-bs-title="Provision" data-bs-placement="bottom">
            <i class="fa-solid fa-shield-halved text-warning"></i>
            <small>{{ currency.amount(amountBalance.totalForecast, false) }}</small>
        </span>
    </div>

    {% if amountBalance.assignments > 0 %}
        <div class="d-flex flex-column w-100">
            <small class="text-muted">Affectation</small>
            <span class="" data-bs-toggle="tooltip" data-bs-title="Affectation" data-bs-placement="bottom">
                <i class="fa-solid fa-solid fa-circle-dollar-to-slot"></i>
                <small>{{ currency.amount(amountBalance.assignments, false) }}</small>
            </span>
        </div>
    {% else %}
        <div class="d-flex flex-column w-100">
            &nbsp;
        </div>
    {% endif %}
</div>

