{% import 'shared/_currency.macro.html.twig' as currency %}

<li class="list-group-item list-group-item-acrylic d-flex justify-content-center align-items-center">
    <div class="d-flex justify-content-center align-items-start w-100 flex-column">
        <div class="d-flex justify-content-between align-items-center w-100">
            <span>{{ periodicEntry.name }}</span>
            <span class="me-2">{{ currency.amount(periodicEntry.totalAmount, true) }}</span>
        </div>
        <div class="d-flex justify-content-start align-items-center flex-wrap w-100 text-white-50">
            <small class="me-2" data-bs-toggle="tooltip" data-bs-title="Type" data-bs-placement="bottom">
                {% if periodicEntry.isForecast %}
                    <i class="fa-solid fa-shield-halved text-warning"></i>
                    <span class="text-warning">{{ periodicEntry.type.humanize }}</span>
                {% else %}
                    <i class="fa-solid fa-leaf text-primary"></i>
                    <span class="text-primary">{{ periodicEntry.type.humanize }}</span>
                {% endif %}
            </small>
            <small class="me-2" data-bs-toggle="tooltip" data-bs-title="Compte" data-bs-placement="bottom">
                <i class="fa-solid fa-building-columns"></i>
                <span>{{ periodicEntry.account.name }}</span>
            </small>
            <small class="me-2" data-bs-toggle="tooltip" data-bs-title="Date d'execution" data-bs-placement="bottom">
                <i class="fa-solid fa-calendar-day"></i>
                <small>{{ periodicEntry.executionDate | format_datetime(pattern='d MMM', locale=app.request.locale) }}</small>
            </small>
            {% if periodicEntry.isForecast %}
                <small class="me-2" data-bs-toggle="tooltip" data-bs-title="Nombre de budget(s) actif" data-bs-placement="bottom">
                    <i class="fa-solid fa-coins"></i>
                    <small>{{ periodicEntry.countBudgets }}</small>
                </small>
            {% endif %}
        </div>
    </div>
    <div class="position-absolute" style="right: 0">
        <div class="dropstart">
            <button type="button" class="btn dropdown-toggle text-secondary border-0" data-bs-toggle="dropdown"
                    aria-expanded="false">
                <i class="fa-solid fa-ellipsis-vertical"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-dark">
                <li>
                    <a class="dropdown-item" href="{{ path('back_periodicentry_edit', {'id': periodicEntry.id}) }}">Modifier</a>
                </li>
                <li>
                    <a class="dropdown-item" data-turbo="true" href="{{ path('front_periodicentry_remove', {'id': periodicEntry.id}) }}">Supprimer</a>
                </li>
            </ul>
        </div>
    </div>
</li>