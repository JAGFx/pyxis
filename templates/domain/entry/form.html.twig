{% extends 'base.html.twig' %}

{% block body %}
    <twig:PageTitle :icon="icons.entry" label="{{ 'entry.title' | trans }}" detail="{{ entry.name | default('actions.create' | trans(domain: 'interface')) }}"
    >
        <twig:block name="beforeActions">
            <twig:Button node="a" :icon="icons.back" color="acrylic" href="{{ path('back_entry_list') }}"/>
        </twig:block>
    </twig:PageTitle>

    <twig:EntryCreateOrUpdateForm
        :form="form"
        :initialFormData="entryCommand"
    />
{% endblock %}