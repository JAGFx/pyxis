{% import 'shared/_currency.macro.html.twig' as currency %}

{% if amountBalances is not empty  %}
    <div class="flex flex-col p-2">
        <div class="flex justify-center pb-2">
            <hr class="w-1/2 border-white/15">
        </div>

        <div class="flex justify-center items-center space-x-4">
            {% for amountBalance in amountBalances %}
                <twig:List:MetricOverviewItem
                        :title="amountBalance.accountName"
                        value="{{ currency.amount(amountBalance.total, false) }}"
                        class="w-auto flex-initial items-center justify-center"
                />
            {% endfor %}
        </div>

        {% if hasMore %}
            <div class="flex items-center justify-center">
                <a data-turbo="true" href="{{ path('back_account_list') }}" class="text-muted flex items-center">
                    <small>
                        <span class="leading-0">{{ 'see_all_accounts' | trans }}</span>
                    </small>
                </a>
            </div>
        {% endif %}
    </div>
{% endif %}